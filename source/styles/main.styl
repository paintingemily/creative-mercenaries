// Modules
@import "../modules/**/!(_)*.styl"
@import "_common"

.video-container
    position relative
    width 100vw
    height 100vh

video#bgvid
    position absolute
    top 50%
    left 50%
    min-width 100%
    min-height 100%
    width auto
    height auto
    z-index -100
    -ms-transform translateX(-50%) translateY(-50%)
    -moz-transform translateX(-50%) translateY(-50%)
    -webkit-transform translateX(-50%) translateY(-50%)
    transform translateX(-50%) translateY(-50%)
    background url('../images/content/up.jpg') no-repeat
    background-size cover 