include ../button/button

mixin header-presentation(data)
	.header-presentation(
		data-0="opacity: 1; transform: translateY(0px);" 
		data-300="opacity: 0; transform: translateY(10px);"
	)&attributes(attributes)
		.video-container
			video(playsinline autoplay muted loop poster="assets/images/content/up.jpg" id="bgvid")
				source(src="assets/images/content/up.webm" type="video/webm")
				source(src="assets/images/content/up.mp4" type="video/mp4")
		
		img(src="http://placekitten.com/g/300/300" alt="logo")